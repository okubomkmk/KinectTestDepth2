<Window x:Class="Microsoft.Samples.Kinect.DepthBasics.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Depth Basics" 
        Height="600" Width="900" 
        Closing="MainWindow_Closing">
    <Grid>
        
        <Viewbox HorizontalAlignment="Left" Height="424" Margin="20,20,0,0" VerticalAlignment="Top" Width="512" Name="Viewbox1">
            <Image Source="{Binding ImageSource}" Stretch="UniformToFill">

            </Image>
        </Viewbox>
        <StatusBar HorizontalAlignment="Left" Height="25" Margin="20,470,0,0" VerticalAlignment="Top" Width="490">
            <StatusBarItem Content="{Binding StatusText}"/>
        </StatusBar>


    </Grid>
</Window>
