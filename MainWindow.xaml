<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:chartingToolkit="clr-namespace:System.Windows.Controls.DataVisualization.Charting;assembly=System.Windows.Controls.DataVisualization.Toolkit" x:Class="Microsoft.Samples.Kinect.DepthBasics.MainWindow"
        Title="Depth Basics" 
        Height="600" Width="900" 
        Closing="MainWindow_Closing">
    <Grid>

        <Viewbox HorizontalAlignment="Left" Height="424" Margin="20,20,0,0" VerticalAlignment="Top" Width="512" x:Name="Viewbox1">
            <Image Source="{Binding ImageSource}" Stretch="UniformToFill"/>
        </Viewbox>
        <StatusBar HorizontalAlignment="Left" Height="25" Margin="20,470,0,0" VerticalAlignment="Top" Width="490">
            <StatusBarItem Content="{Binding StatusText}"/>
        </StatusBar>


        <chartingToolkit:Chart HorizontalAlignment="Left" Height="435" Margin="510,50,0,0" VerticalAlignment="Top" Width="345" >
            <chartingToolkit:LineSeries Name="DepthChart"/>
        </chartingToolkit:Chart>
            


    </Grid>
</Window>
